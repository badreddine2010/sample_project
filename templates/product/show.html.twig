{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <a href="{{ path('app_product_index') }}">back to list</a>
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ asset('build/images/' ~ product.image) }}" class="card-img-top"  alt="image de l'article"></td>
            </tr>
        </tbody>
    </table>


    <a href="{{ path('app_product_edit', {'id': product.id}) }}">edit</a>

    {{ include('product/_delete_form.html.twig') }}
{% endblock %}
